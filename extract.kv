#:kivy 2.0.0

<MainScreen>:
    Label:
        id: title
        top: root.top - 15
        center_x: root.width / 2
        font_size: 50
        text: "Extract"
        halign: "right"
        valign: "middle"
    TextInput:
        id: input
        top: title.top - 100
        center_x: root.width / 4
        size: root.width / 3, 100
        hint_text: "Paste photos numbers"
        on_text: root.parse()
    TextInput:
        id: parsed
        top: title.top - 100
        center_x: root.width / 4 * 3
        size: root.width / 3, 100
        hint_text: "These photos will be extracted"
        readonly: True
    TextInput:
        id: template
        top: input.top - 140
        center_x: input.center_x
        size: root.width / 3, 50
        text: "IMG_*.CR3"
    Button:
        id: sourceButton
        text: "Select source folder"
        on_release: root.show_source_selector()
        top: template.top - 90
        center_x: input.center_x
    Button:
        id: targetButton
        text: "Select target folder"
        on_release: root.show_target_selector()
        top: template.top - 90
        center_x: parsed.center_x
    Button:
        id: startButton
        text: "Begin"
        on_release: root.extract()
        top: sourceButton.top - 90
        center_x: title.center_x

<FolderSelector>
    chooser: chooser
    BoxLayout:
        size: root.size
        pos: root.pos
        orientation: "vertical"
        DropDown:
            id: drop
        FileChooserIconView:
            id: chooser
            filters: [root.is_dir]
        BoxLayout:
            size_hint_y: None
            height: 30
            Button:
                text: "Cancel"
                on_release: root.cancel()
            Button:
                text: "Select"
                on_release: root.load(chooser.path, chooser.selection)